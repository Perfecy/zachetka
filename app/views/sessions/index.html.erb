<canvas id="canvas"></canvas>
<div class="row justify-content-center text-center enterform">
  <h1 class="col-12 head">WORLD OF DOTA2</h1>
  <% if notice %>
    <div id="notice" class="alert alert-info"><%= notice %></div>
  <% end %>
  <% if current_user %>
    <div>Logged as <%= current_user.name %></div>
    <br />
    <%= link_to(t('Log Out'), { controller: 'sessions', action: 'logout'}, class: 'btn btn-primary') %>
  <% else %>
    <%= form_tag('/auth', method: 'post') do %>
      <% if flash[:alert] %>
        <div id="danger" class="alert alert-danger"><%= flash[:alert] %></div>
        <br />
      <% end %>
        <%= label_tag(:name, 'Username') %>
        <%= text_field_tag(:name, '', class: 'form-control') %>
        <br />
        <%= label_tag(:password, 'Password') %>
        <%= password_field_tag(:password, '', class: 'form-control') %>
        <br />
        <%= submit_tag(t('Sign In'), class: 'btn btn-primary') %>
        <%= link_to(t('Sign Up'), { controller: 'users', action: 'new' }, class: 'btn btn-outline-primary') %>
    <% end %>
  <% end %>
</div>
